{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": ["--extra-vars", "builder={{user `builder`}}"]
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-a0cfeed8",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "my_nginx"
    },
    {
      "type": "docker",
      "image": "mario21ic/amazonlinux:1",
      "commit": true
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "only": ["docker"],
        "repository": "mario21ic/nginx",
        "tag": "draft"
      },
      "docker-push"
    ]
  ]
}
