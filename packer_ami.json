{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml"
    }
  ],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "eu-west-1",
      "source_ami": "ami-70edb016",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "ami_name": "my_nginx"
    },
    {
      "type": "docker",
      "image": "amazonlinux",
      "commit": true
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "mario21ic/ami_nginx",
        "tag": "0.1"
      },
      "docker-push"
    ]
  ]
}
